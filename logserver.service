[Unit]
Description=Logserver Daemon
After=network-online.target
Wants=network-online.target

Wants=nss-lookup.target
Before=nss-lookup.target

StartLimitBurst=5
StartLimitIntervalSec=10

[Service]
Type=simple
Restart=always
RestartSec=1
User=%USER%
ExecStart=/usr/bin/logserver --config /etc/logserver/logserver.toml
StandardOutput=append:/var/log/logserver.log
StandardError=append:/var/log/logserver.err

[Install]
WantedBy=multi-user.target